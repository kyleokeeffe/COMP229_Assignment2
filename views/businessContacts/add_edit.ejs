<%- include ../partials/header.ejs %>
<% if(messages!=null){
    for(var i in messages) { %>
    <div class="flash text-center bg-warning w-60"><%= messages[i].msg %></div>
    <% }} %>
<div class ="container">
    <div class ="row">
        <div class = "offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <!-- Add or Edit business contact form -->
            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden" 
                        name="id" 
                        value="<%= BusinessContact._id %>"
                    >
                    <label for="nameTextField">Name</label>
                    <input type="text" 
                        class="form-control" 
                        id="nameTextField" 
                        placeholder="Please enter Business Contact Name" 
                        name="name" 
                        value ="<%= BusinessContact.name %>" 
                        required>
                </div>
                <br>
                <div class="form-group">
                    <label for="telephoneTextField">Telephone</label>
                    <input type="text" 
                        class="form-control" 
                        id="telephoneTextField" 
                        placeholder="0" 
                        name="telephone" 
                        value ="<%= BusinessContact.telephone %>" 
                        required>
                </div>
                <br>
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" 
                        class="form-control" 
                        id="emailTextField" 
                        placeholder="Please enter an email address" 
                        name="email" 
                        value ="<%= BusinessContact.email %>" 
                        required>
                </div>
                <br>
                <br>
                <!-- Input Buttons -->
                <button class="btn btn-dark" type="submit"> <i class="fas fa-edit"></i>Submit</button>
                <a class="btn btn-warning" href ="/businessContacts/list" > <i class="fas fa-undo"></i>Cancel</a>
                <!-- Conditional for displaying delete button on edit view -->
                <a class="btn btn-danger btn-sm <% if(title == 'Edit Business Contact'){ %>d-inline<% }else{ %>d-none<% } %>" href="/businessContacts/delete/<%= BusinessContact._id %>">Delete<i class= "fas fa-pencil-alt"></i></a></td>
            </form>
        </div>
    </div>
</div>

