  <% include ../partials/header.ejs %>

  <h1><%= title %></h1>
  <div class="container">
 
 
      <div class="text-center d-sm-flex flex-sm-row justify-content-center">
        <% for(var i in messages) { %>
            <div class="flash"><%= messages[i] %></div>
        <% } %>
       
        <!-- Login form -->
        <form class="form-signin" action="/users/register" method="POST" autocomplete="off" validate>
            <img class="mb-4" src="/images/logo2.png" width="100">
            <h1 class = "h3 mb-3 font-weight-normal">Please enter Registration Information</h1>
            
            <div class="form-group">
                
                <label for="username">Username</label>
                <input type="text" 
                name="username"
                id="username" 
                class="form-control" 
                value="<% user.username %>" 
                required 
                autofocus>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" 
                name="email"
                id="email" 
                class="form-control" 
                value="<% user.email %>"
                required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" 
                name="password"
                id="password" 
                class="form-control" 
                value="<% user.password %>"
                required>
            </div>
            <div class="form-group">
                <label for="password-confirm">Confirm Password</label>
                <input type="password" 
                name="password-confirm"
                id="password-confirm" 
                class="form-control" 
                required>
            </div><div>

                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Register">
            </div>
            </form>
            
      </div>
  
        
  </div>
  <% include ../partials/footer.ejs %>
  